@model AuthenticationAuthorizationpractice.Models.EmployeeDTO;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()





    <div class="text-center">
        <h4>Create Employee</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        
        <div class="text-danger">
        <p>@Html.Raw(ViewBag.Message)</p>
        </div>
    </div>



    <table class="table">



        <tr>


            <td>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Name</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Last Name</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <br />


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Email</p>
                        </div>
                        <div class="col-md-10">
                              <input asp-for="Email" class="form-control" asp-action="Create" name="Email" value=@User.Identity.Name />
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <br />



                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>User ID</p>
                        </div>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" asp-action="Create" name="Email" value=@User.Identity.Name />

                        </div>
                    </div>

                </div>



                <br />

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Age</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <br />

                <div class="form-group">
                    <div class="row">

                        <div class="col-md-2">

                            <p>Join Date</p>
                        </div>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Doj, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Doj, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <br />


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Gender</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <br />

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Married</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IsMarried, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IsMarried, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <br />

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Status</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <br />


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Designation</p>
                        </div>
                        <div class="col-md-10">
                            @Html.DropDownList("DesignationID", (SelectList) ViewBag.DeptList, "-- Select Designation --", new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <br>


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">

                            <p>Role</p>
                        </div>
                        <div class="col-md-10">
                            @Html.DropDownList("RoleID", (SelectList) ViewBag.RoleViewModelList, "-- Select Role --", new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <br>

            </td>
        </tr>

    </table>

    <table>
        <tr>
            <td>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />

                </div>
            </td>
            <td> |</td>
            <td>

                <input type="button" value="BacK to List" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />

            </td>
        </tr>
    </table>



}



